html(ng-app="proposalTool", ng-controller="BaseController")
    head
        meta(charset='utf8')
        base(href='/')
        title Proposal Tool
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/css/app.css')
        link(href='http://fonts.googleapis.com/css?family=Zeyada', rel='stylesheet', type='text/css')
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.icon-bar
                        span.icon-bar
                    div
                        img.motion(src='img/logo.jpg', alt='Custom Proposal Tool').pull-left
                        a.navbar-brand.pull-right(href='/') Proposal Tool
                .collapse.navbar-collapse
                    ul.nav.navbar-nav.pull-right

                        li(class='dropdown', ng-class='{active:isActive(["/proposalList", "other"])}', logged-in)
                            a(href='/proposalList', class='dropdown-toggle').center
                                img(src='img/proposals-small.png', alt='Custom Proposal Tool')
                                p Proposals
                                ul(class='dropdown-menu')
                                    li
                                        a(href='/addProposal') Add Proposal
                                        a(href='/editProposal') Edit Proposal
                                        a(href='/exampleProposal') Example Proposal
                        //li(ng-class='{active:isActive("/")}', logged-out)
                        //    a(href='/') Login
                        li(class='dropdown', ng-class='{active:isActive(["/contacts", "other"])}', logged-in)
                            a(href='/contacts', class='dropdown-toggle').center
                                img(src='img/contacts-small.png', alt='Custom Proposal Tool')
                                p Contacts
                                ul(class='dropdown-menu')
                                    li
                                        a(href='/addContact') Add Contact
                        li(class='dropdown', ng-class='{active:isActive(["/myAccount", "other"])}', logged-in)
                            a(href='/', class='dropdown-toggle').center
                                img(src='img/myaccount-small.png', alt='Custom Proposal Tool')
                                p My Account
                                ul(class='dropdown-menu')
                                    li
                                        a(href='javascript:void(0);', ng-click='doLogout()') Logout
        div(ng-view).container


        //hr
        //
        //div
        //    pre User session data
        //        br
        //        span(ng-bind="userSession | json")

        script(src='lib/angular/angular.js')
        script(src='lib/angular-route/angular-route.js')
        script(src='lib/angular-cookies/angular-cookies.min.js')
        script(src='lib/angularLocalStorage/src/angularLocalStorage.js')
        script(src='lib/underscore/underscore-min.js')
        script(src='lib/restangular/dist/restangular.min.js')

        script(src='js/app.js')
        script(src='js/constants.js')
        script(src='js/services.js')
        script(src='js/controllers.js')
        script(src='js/filters.js')
        script(src='js/directives.js')

        script(src='lib/jquery/jquery.min.js')
        script(src='lib/bootstrap/dist/js/bootstrap.min.js')

